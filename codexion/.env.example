# =========================
# Codexion (local dev env)
# =========================

# -------------------------
# Database (reserved/future)
# -------------------------
POSTGRES_USER=codexion
POSTGRES_PASSWORD=codexion123
POSTGRES_DB=codexion
DATABASE_URL=postgresql://codexion:codexion123@postgres:5432/codexion

# -------------------------
# Edge Gateway (Node)
# -------------------------
PORT=8787
OFFLINE_MODE=false
LOCK_PROVIDER=mock
MOCK_LOCK_DELAY_MS=400
MOCK_LOCK_SUCCESS_RATE=0.9
BLE_SCANNER_ENABLED=false
AUTO_SEED_ON_BOOT=true

# -------------------------
# Dashboard (Next.js)
# -------------------------
# Public vars are embedded into the browser bundle.
NEXT_PUBLIC_EDGE_API_URL=http://localhost:8787
NEXT_PUBLIC_EDGE_WS_URL=ws://localhost:8787/ws

# -------------------------
# Middleware (Python/BLE)
# -------------------------
EDGE_GATEWAY_URL=http://edge-gateway:8787
WATCH_MAC_ADDRESS=
EDGE_AES256_KEY_B64=
OUTBOX_DB_PATH=/app/runtime/edge_outbox.db
VVFIT_SDK_PATH=/app/sdk
